{
  "name": "GitHub → Jira button",
  "version": "0.1.0",
  "description": "Adds a button to GitHub issues for easy navigation to the issue in Jira",
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "page_action": {
    "default_title": "GitHub → Jira",
    "default_icon": "icon-passive.png"
  },
  "commands": {
    "goto-jira": {
      "suggested_key": {
        "default": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Open GitHub issue in Jira"
    }
  },
  "manifest_version": 2
}